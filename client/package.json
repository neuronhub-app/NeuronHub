{
  "name": "neuronhub",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite --config vite.config.ts",
    "build": "tsc && vite build",
    "serve": "vite preview",
    "format": "bun run biome check --write",
    "update-check": "bun run ncu --packageManager=bun",
    "update": "bun run ncu --upgrade --packageManager=bun && bun install",
    "typegen": "bunx @chakra-ui/cli typegen ./src/theme.ts",
    "graphql:codegen": "graphql-codegen --config src/codegen.ts"
  },
  "dependencies": {
    "@chakra-ui/react": "^3.12.0",
    "@emotion/react": "^11.14.0",
    "next-themes": "^0.4.5",

    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-hook-form": "^7.54.2",
    "react-hook-form-chakra": "^1.0.2",
    "react-router": "^7.3.0",
    "react-hot-toast": "^2.5.2",
    "react-select": "^5.10.1",
    "chakra-react-select": "^6.0.1",

    "lucide-react": "^0.479.0",
    "react-icons": "^5.5.0",

    "@hookform/resolvers": "^4.1.3",
    "@hookform/devtools": "^4.3.3",

    "valtio": "^2.1.3",
    "zod": "^3.24.2",
    "marked": "^15.0.7",
    "date-fns": "^4.1.0",
    "date-fns-tz": "^3.2.0",
    "@sentry/react": "^9.5.0",
    "envalid": "^8.0.0",

    "urql": "^4.2.2",
    "gql.tada": "^1.8.10",
    "graphql": "^16.10.0"
  },
  "devDependencies": {
    "@chakra-ui/cli": "^3.12.0",
    "globby": "^14.1.0",

    "@biomejs/biome": "^1.9.4",

    "@graphql-codegen/cli": "^5.0.5",
    "@graphql-codegen/client-preset": "^4.7.0",

    "@types/node": "^22.13.10",
    "@types/react": "^19.0.10",
    "@types/react-dom": "^19.0.4",
    "typescript": "^5.8.2",

    "@redux-devtools/extension": "^3.3.0",

    "vite": "^6.2.1",
    "@vitejs/plugin-react": "^4.3.4",
    "@rollup/plugin-replace": "^6.0.2",
    "vite-tsconfig-paths": "^5.1.4",

    "npm-check-updates": "^17.1.15"
  }
}
