{
	"name": "neuronhub",
	"private": true,
	"type": "module",
	"scripts": {
		"dev": "vite --config vite.config.ts",
		"build": "tsc && vite build",
		"serve": "vite preview",
		"format": "bun run biome check --write",
		"check-update": "bun run ncu",
		"upgrade": "bun run ncu --upgrade && bun install",
		"panda:codegen": "panda codegen",
		"graphql:codegen": "graphql-codegen --config src/codegen.ts"
	},
	"dependencies": {
		"@chakra-ui/react": "^3.2.4",
		"@emotion/react": "^11.14.0",
		"next-themes": "^0.4.4",

		"react": "^19.0.0",
		"react-dom": "^19.0.0",
		"react-hook-form": "^7.54.2",
		"react-hook-form-chakra": "^1.0.2",
		"react-router": "^7.1.1",
		"react-select": "^5.9.0",
		"react-hot-toast": "^2.5.1",

		"react-icons": "^5.4.0",
		"lucide-react": "^0.469.0",

		"@hookform/resolvers": "^3.9.1",
		"@hookform/devtools": "^4.3.3",

		"valtio": "^2.1.2",
		"zod": "^3.24.1",
		"marked": "^15.0.5",
		"@sentry/react": "^8.47.0",

		"urql": "^4.2.1",
		"gql.tada": "^1.8.10",
		"graphql": "^16.10.0"
	},
	"devDependencies": {
		"@biomejs/biome": "^1.9.4",

		"@graphql-codegen/cli": "^5.0.3",
		"@graphql-codegen/client-preset": "^4.5.1",

		"@types/node": "^22.10.4",
		"@types/react": "^19.0.2",
		"@types/react-dom": "^19.0.2",
		"typescript": "^5.7.2",

		"vite": "^6.0.7",
		"@vitejs/plugin-react": "^4.3.4",
		"@rollup/plugin-replace": "^6.0.2",
		"vite-tsconfig-paths": "^5.1.4",

		"npm-check-updates": "^17.1.13"
	}
}
