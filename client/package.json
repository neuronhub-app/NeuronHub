{
  "name": "neuronhub",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "react-router dev",
    "build": "tsc && vite build",
    "serve": "vite preview",
    "format": "bun run biome check --write",
    "update-check": "bun run ncu --packageManager=bun",
    "update": "bun run ncu --upgrade --packageManager=bun && bun install",
    "typegen": "bunx @chakra-ui/cli typegen src/theme/theme.ts",
    "graphql:codegen": "graphql-codegen --config src/codegen.ts"
  },
  "dependencies": {
    "@chakra-ui/react": "^3.19.1",
    "@emotion/react": "^11.14.0",
    "next-themes": "^0.4.6",

    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-router": "^7.6.1",
    "@react-router/dev": "^7.6.1",
    "@react-router/node": "^7.6.1",

    "react-hook-form": "^7.56.4",
    "react-hook-form-chakra": "^1.0.2",
    "react-hot-toast": "^2.5.2",
    "react-select": "^5.10.1",
    "chakra-react-select": "^6.1.0",

    "lucide-react": "^0.511.0",
    "react-icons": "^5.5.0",

    "@hookform/resolvers": "^5.0.1",
    "@hookform/devtools": "^4.4.0",

    "valtio": "^2.1.5",
    "zod": "^3.25.42",
    "marked": "^15.0.12",
    "date-fns": "^4.1.0",
    "@date-fns/tz": "^1.2.0",
    "@sentry/react": "^9.24.0",
    "envalid": "^8.0.0",

    "urql": "^4.2.2",
    "gql.tada": "^1.8.10",
    "@0no-co/graphqlsp": "^1.12.16",
    "graphql": "^16.11.0"
  },
  "devDependencies": {
    "@chakra-ui/cli": "^3.19.1",
    "globby": "^14.1.0",

    "@biomejs/biome": "^1.9.4",

    "@graphql-codegen/cli": "^5.0.6",
    "@graphql-codegen/client-preset": "^4.8.1",

    "@types/node": "^22.15.29",
    "@types/react": "^19.1.6",
    "@types/react-dom": "^19.1.5",
    "typescript": "^5.8.3",

    "@redux-devtools/extension": "^3.3.0",

    "vite": "^6.3.5",
    "@vitejs/plugin-react": "^4.5.0",
    "@rollup/plugin-replace": "^6.0.2",
    "vite-tsconfig-paths": "^6.0.0-beta.3",

    "npm-check-updates": "^18.0.1"
  }
}
