{
	"compilerOptions": {
		"target": "ESNext", // ES2020 from Vite, replaced with ESNext for Chakra
		"module": "ESNext", // ES6 replace with ESNext for Chakra
		"lib": ["ESNext", "DOM", "DOM.Iterable"],
		"moduleResolution": "Bundler", // by Vite and Chakra

		"useDefineForClassFields": true,
		"skipLibCheck": true,

		"isolatedModules": true,
		"moduleDetection": "force",
		"noEmit": true,
		"jsx": "react-jsx",

		"strict": false, // TSC reports errors of fake types

		"noFallthroughCasesInSwitch": true,

		"baseUrl": ".",

		"paths": {
			"": ["./node_modules/*"],
			"@/graphql/*": ["./graphql/*"],
			"~/*": ["./src/*"],
			"@/*": ["./src/*"],
		},

		"plugins": [
      {
        "name": "gql.tada/ts-plugin",
        "schema": "./../schema.graphql",
        "tadaOutputLocation": "./graphql/graphql-env.d.ts"
      }
    ]
	},
	"include": ["src"],
}
