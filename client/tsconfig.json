{
  "compilerOptions": {
    "target": "ESNext", // ES2020 from Vite, replaced with ESNext for Chakra
    "module": "ESNext", // ES6 replaced with ESNext for Chakra
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "moduleResolution": "Bundler", // by Vite and Chakra

    "useDefineForClassFields": true,
    "skipLibCheck": true,

    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": true,
    "jsx": "react-jsx",

    // zod.js requires strict=true (and probably strictNullChecks=true) to mark fields as "required" by default.
    //
    // gql.tada doesn't work without it.
    "strict": true,

    "noFallthroughCasesInSwitch": true,

    "baseUrl": ".",
    "rootDirs": [".", "./.react-router/types"], // from react-router docs

    "paths": {
      "@/e2e/*": ["./e2e/*"],
      "@/*": ["./src/*"],
      // generated
      "~/graphql/*": ["./graphql/*"],
      "~/react-router/*": ["./.react-router/types/src/apps/*"],
    },

    "plugins": [
      {
        "name": "gql.tada/ts-plugin",
        "schema": "./../schema.graphql",
        "tadaOutputLocation": "./graphql/graphql-env.d.ts",
        "shouldCheckForColocatedFragments": false, // see [[docs/client-caveats.md]]
      },
    ],
  },
  "include": [
    "src",
    "e2e",
    "vite.config.ts",
    ".react-router/types/**/*", // from react-router docs
  ],
}
