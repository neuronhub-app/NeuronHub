{
  "compilerOptions": {
    "target": "ESNext", // ES2020 from Vite, replaced with ESNext for Chakra
    "module": "ESNext", // ES6 replace with ESNext for Chakra
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "moduleResolution": "Bundler", // by Vite and Chakra

    "useDefineForClassFields": true,
    "skipLibCheck": true,

    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": true,
    "jsx": "react-jsx",

    // zod.js requires strict=true (and probably strictNullChecks=true) to mark fields as "required" by default.
    //
    // gql.tada doesn't work without it.
    "strict": true,

    "noFallthroughCasesInSwitch": true,

    "baseUrl": ".",

    "paths": {
      "": ["./node_modules/*"],
      "@/graphql/*": ["./graphql/*"],
      "@/*": ["./src/*"]
    },

    "plugins": [
      {
        "name": "gql.tada/ts-plugin",
        "schema": "./../schema.graphql",
        "tadaOutputLocation": "./graphql/graphql-env.d.ts"
      }
    ],

    "typeRoots": ["./node_modules/@types", "./src/types.d.ts"]
  },
  "include": ["src"]
}
